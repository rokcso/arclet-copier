{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "version": "1.6.9",
  "description": "__MSG_extDescription__",
  "default_locale": "en",
  "author": "rokcso",
  "homepage_url": "https://arcletcopier.com/",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "notifications",
    "offscreen",
    "clipboardWrite",
    "contextMenus"
  ],
  "host_permissions": [
    "https://is.gd/*",
    "https://tinyurl.com/*",
    "https://umami.coryso.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["_locales/*/*.json"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["assets/icons/*"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["pages/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "options_page": "pages/options/options.html",
  "commands": {
    "copy-url": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "Command+Shift+C"
      },
      "description": "__MSG_copyUrlShortcut__"
    }
  },
  "action": {
    "default_popup": "pages/popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "64": "assets/icons/icon64.png",
      "128": "assets/icons/icon128.png",
      "256": "assets/icons/icon256.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "64": "assets/icons/icon64.png",
    "128": "assets/icons/icon128.png",
    "256": "assets/icons/icon256.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ]
}
