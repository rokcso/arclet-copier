{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "version": "1.3.1",
  "description": "__MSG_extDescription__",
  "default_locale": "zh_CN",
  "author": "rokcso",
  "homepage_url": "https://rokcso.com/",
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "scripting",
    "offscreen",
    "clipboardWrite"
  ],
  "web_accessible_resources": [
    {
      "resources": ["_locales/*/*.json"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "commands": {
    "copy-url": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "Command+Shift+C"
      },
      "description": "__MSG_copyUrlShortcut__"
    }
  },
  "action": {
    "default_popup": "html/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "64": "icons/icon64.png",
      "128": "icons/icon128.png",
      "256": "icons/icon256.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png",
    "256": "icons/icon256.png"
  }
}
